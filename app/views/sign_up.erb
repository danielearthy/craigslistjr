<div class ="container">
  <h2>Create a User</h2>
  <form name = "input" action ="/user/new" method = "post">
 
  <label class="label" for="name">Name</label>
  <input type="text" name="user[name]" placeholder="e.g., joe" >
  <br>

  <label class="label" for="email">Email</label>
  <input type="email" name="user[email]" placeholder="e.g., me@example.com" >
  <br>
  
  <label class="label" for="password">Password</label>
  <input type="password" name="user[password]" placeholder="6 or more characters">
  <br>

  <div class ="submit"> <input type ="submit" value = "Login"> </div>
  </form>
</div>